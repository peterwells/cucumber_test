class Calculator
	attr_reader :result
	
	def initialize
		@args ||=[]
	end
	
	def push(n)
		@args << n
	end
	
	def add
		@second = @args.pop.to_i
		@first = @args.pop.to_i
		@result = @first + @second
	end

	def subtract
		@second = @args.pop.to_i
		@first = @args.pop.to_i
		
		unless @first.nil?
			@result = @first - @second
		else
			@result = @second
		end
	end
end
